<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:INM"
             x:Class="INM.MainPage">

				<StackLayout>
								<Label Text="innaMinute" 
           HorizontalOptions="Center"
															FontFamily="cursive"
															FontSize="40"/>
								<Label Text="Email"
															HorizontalOptions="Start"
															Margin="10, 0, -10, 0"/>
								<Entry x:Name="EmailEntry"/>
								<Label Text="Password"
															HorizontalOptions="Start"
															Margin="10, 40, -10, 0"/>
								<Entry IsPassword="True" x:Name="PasswordEntry"/>
								<Button x:Name="LoginBtn" Text="Login" Clicked="LoginBtn_Clicked" Margin="0, 10, 0, 0 "/>
								<Button x:Name="CreateAccountBtn" Text="Create Account" Clicked="CreateAccountBtn_Clicked"/>
				</StackLayout>
</ContentPage> 