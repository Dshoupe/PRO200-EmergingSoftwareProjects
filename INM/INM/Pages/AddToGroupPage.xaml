<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="INM.Pages.AddToGroupPage"
			 BackgroundColor="#CFCDD7"
													Title="innaMinute">
				<ContentPage.Content>
								<Frame BorderColor="Black"
			   Padding="4"
			   Margin="15">
												<StackLayout BackgroundColor="Snow">
																<Label Text="Add To Group"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
																<StackLayout Orientation="Horizontal">
																				<Label x:Name="NameGroupLabel"
					   Text="Name Group"/>
																				<Entry x:Name="GroupNameEntry"
				   VerticalOptions="CenterAndExpand" 
				   HorizontalOptions="CenterAndExpand"/>
																</StackLayout>
																<StackLayout x:Name="DisplayContactsStackLayout">

																</StackLayout>
												</StackLayout>
								</Frame>
				</ContentPage.Content>
</ContentPage>