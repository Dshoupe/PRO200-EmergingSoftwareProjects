<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="innaMinute.Pages.HomePage">
	<ContentPage.Content>

		<StackLayout>
			<Label x:Name="TimerLabel" 
				   Text="00:00:00"
				   FontSize="Medium"/>
			<Image Source="recordbutton.png" WidthRequest="50" HeightRequest="50">
				<Image.GestureRecognizers>
					<TapGestureRecognizer Tapped="RecordButtonTapGestureRecognizer_Tapped"/>
				</Image.GestureRecognizers>
			</Image>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>